@model IEnumerable<ArtOnWheels.Models.StaffDto>

<h2>Staff List</h2>
<a href="@Url.Action("Create", "StaffPage")">Add New Staff</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Position</th>
            <th>Contact</th>
            <th>Exhibition</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.FirstName</td>
                <td>@staff.LastName</td>
                <td>@staff.Position</td>
                <td>@staff.Contact</td>
                <td>@staff.ExhibitionName</td>
                <td>
                    <a href="@Url.Action("Edit", "StaffPage", new { id = staff.StaffId })">Edit</a> |
                    <a href="@Url.Action("Delete", "StaffPage", new { id = staff.StaffId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>