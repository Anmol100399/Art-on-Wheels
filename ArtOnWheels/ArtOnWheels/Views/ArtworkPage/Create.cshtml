@model ArtOnWheels.Models.ArtworkDto

<h1>Create New Artwork</h1>

<form asp-action="Create" method="post">
    <div>
        <label for="Title">Title</label>
        <input id="Title" asp-for="Title" />
    </div>
    <div>
        <label for="Description">Description</label>
        <textarea id="Description" asp-for="Description"></textarea>
    </div>
    <div>
        <label for="Price">Price</label>
        <input id="Price" type="number" asp-for="Price" />
    </div>
    <div>
        <label for="CreationYear">Year of Creation</label>
        <input id="CreationYear" type="number" asp-for="CreationYear" />
    </div>
    <div>
        <label for="ImageUrl">Image URL</label>
        <input id="ImageUrl" asp-for="ImageUrl" />
    </div>
    <div>
        <button type="submit">Save Artwork</button>
        <a href="@Url.Action("List", "ArtworkPage")">Cancel</a>
    </div>
</form>