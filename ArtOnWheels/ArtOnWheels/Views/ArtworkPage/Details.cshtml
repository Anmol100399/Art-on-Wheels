@model ArtOnWheels.Models.ArtworkDto

<h1>Artwork Details</h1>
<div>
    <h3>@Model.Title</h3>
    <p><strong>Artist:</strong> @Model.ArtistName</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Year Created:</strong> @Model.CreationYear</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Exhibitions:</strong> @string.Join(", ", Model.ExhibitionNames)</p>
    <img src="@Model.ImageUrl" alt="Artwork Image" />
</div>
<br />
<a href="@Url.Action("List", "ArtworkPage")">Back to Artwork List</a>
